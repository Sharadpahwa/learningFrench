<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userHome">

    <ImageView
        android:id="@+id/ivPlayGames"
        android:layout_width="167dp"
        android:layout_height="0dp"

        android:layout_marginBottom="12dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/ivWatchVideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPlayQuiz"
        app:srcCompat="@drawable/pg" />

    <ImageView
        android:id="@+id/ivWatchVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/ivNewWords"
        app:layout_constraintEnd_toEndOf="@+id/ivPlayGames"
        app:layout_constraintStart_toStartOf="@+id/ivPlayGames"
        app:layout_constraintTop_toBottomOf="@+id/ivPlayGames"
        app:srcCompat="@drawable/wv" />

    <ImageView
        android:id="@+id/ivPlayQuiz"
        android:layout_width="183dp"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/ivPlayGames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pq" />

    <ImageView
        android:id="@+id/ivNewWords"
        android:layout_width="175dp"
        android:layout_height="0dp"

        android:layout_marginBottom="138dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivWatchVideo"
        app:srcCompat="@drawable/nw" />
</androidx.constraintlayout.widget.ConstraintLayout>